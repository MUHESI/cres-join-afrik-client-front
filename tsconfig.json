{
   "compilerOptions": {
     "lib": ["es2018"],
     "target": "es2018",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./dist",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "sourceMap": true,
     "esModuleInterop": true,
   },
   "include": [
     "src/**/*.ts",
     "index.js",
     "config/*.config.js", "__test__/user.test.ts", "__test__/server.test.ts", "config/nodemailer.config.ts" // for *.config.js files
   ],
   "exclude": [
     "node_modules"
   ]
 }
